{
  "homepage": "http://abdelghanyMh.github.io/react-calculator",
  "name": "react-calculator",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "watch:sass": "sass --watch src/sass/main.sass  src/index.css",
    "compile:sass": "sass --no-source-map src/sass/main.sass  src/index.comp.css",
    "prefix:css": "postcss --use autoprefixer  -b 'last 10 versions' src/index.comp.css -o src/index.prefix.css",
    "compress:css": "sass --style compressed src/index.prefix.css src/index.css ",
    "build:css": "npm-run-all compile:sass prefix:css compress:css ",
    "start": "react-scripts start  npm-run-all  watch:sass"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "gh-pages": "^3.2.3",
    "autoprefixer": "^10.4.2",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^9.1.0",
    "sass": "^1.49.4"
  }
}
